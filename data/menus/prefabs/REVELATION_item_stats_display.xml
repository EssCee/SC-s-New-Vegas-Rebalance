<!-- Item Weight (WG) -->
<rect name="WeightInfo">
  <include src="card_info.xml"/>

  <x>
    <copy src="parent()" trait="user0"/>
    <add> 10 </add>
  </x>
  <width>
    <copy src="parent()" trait="user0"/>
  </width>
  <height>
    <copy src="parent()" trait="user1"/>
  </height>

  <_Title> &-sInventoryWeightUpper; </_Title>

  <_Value></_Value>
  <!-- Set in code -->
  <visible> &false; </visible>
  <!-- Set in code -->
</rect>

<!-- Item Value (VAL)-->
<rect name="ValueInfo">
  <include src="card_info.xml"/>

  <x>
    <copy src="parent()" trait="user0"/>
    <add> 10 </add>
    <mul> 2 </mul>
  </x>
  <width>
    <copy src="parent()" trait="user0"/>
  </width>
  <height>
    <copy src="parent()" trait="user1"/>
  </height>

  <_Title> &-sInventoryValue; </_Title>

  <_Value></_Value>
  <!-- Set in code -->
  <visible> &false; </visible>
  <!-- Set in code -->
</rect>

<!-- Item Condition (CND)-->
<rect name="ConditionInfo">
  <include src="card_info.xml"/>
	<user6></user6> <!-- this does something -->

  <y>
    <copy src="parent()" trait="user1"/>
  </y>
  <width>
    <copy src="parent()" trait="user0"/>
  </width>
  <height>
    <copy src="parent()" trait="user1"/>
  </height>

  <_Title> &-sInventoryCondition; </_Title>
  <visible> &false; </visible>
  <!-- Set in code -->

  <!-- Condition value is shown as a bar -->
  <rect name="ConditionMeter">
    <include src="meter.xml"/>

    <visible>
      <copy src="parent()" trait="visible"/>
    </visible>
    <_SolidMeter> &true; </_SolidMeter>
    <_ShowBackground> &true; </_ShowBackground>
    <_Value>
      <copy src="parent()" trait="user5"/>
    </_Value>
    <height> 20 </height>
    <width>
      <copy src="parent()" trait="width"/>
      <sub> 72 </sub>
    </width>
    <x> 62 </x>
    <y> 15 </y>
  </rect>

	<!-- Interface\HUD\hud_icon_armor_ap.dds< -->
	<image name="CNDArrows">
		<id></id>
		<depth>10</depth>
		<systemcolor</systemcolor>
		<locus>&true;</locus>
		<filename>interface\shared\arrow\repair_meter_pips.dds</filename>
		<width>16</width>
		<height>16</height>
		<alpha>255</alpha>
		<x>
			<copy src="ConditionMeter" trait="x"/>
			<add>
				<copy src="ConditionMeter" trait="width"/>
				<div>2</div>
			</add>
			<add>
				<copy src="ConditionMeter" trait="width"/>
				<div>4</div>
				<onlyif>
					<copy src="parent()" trait="user6"/>
					<eq> 1 </eq>
				</onlyif>
			</add>
		</x>
		<!-- these x and y are set in code because the arrows can show up in various places. -->
		<y>
			<copy src="ConditionMeter" trait="y"/>
			<add>2</add>
		</y>
		<zoom>&scale;</zoom>
		<visible>&true;</visible>
	</image>
	
</rect>





