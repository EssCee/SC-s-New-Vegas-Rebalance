<rect name="SaveCharacterSelector">
    <image name="Save_LeftFilterArrow">
        <id> &generic; </id>
        <filename> Interface\Main\main_arrow_left.dds </filename>
        <x><copy src="sibling(Save_CharacterName)" trait="x"/><sub> 20 </sub></x>
        <y> 402.5 </y>
        <width> 17.5 </width>
        <height> 35 </height>
        <zoom> &scale; </zoom>
        <target> &true; </target>
        <clicksound>UIMenuPrevNext</clicksound>
        <visible> &true; </visible>        <!-- Set in code -->
        <depth> 5 </depth>
        <alpha> <copy src="grandparent()" trait="_alpha"/> </alpha>
    </image>

    <text name="Save_CharacterName">
        <id> &generic; </id>
        <font> 6 </font>
        <string> All </string>
        <x> <copy src="screen()" trait="width"/> <div> 2 </div> <sub src="grandparent()" trait="x"/> <sub><copy src="me()" trait="width"/>  <div> 2 </div> </sub></x>
        <y> 400 </y>
        <target> &true; </target>
        <wheelable> &true; </wheelable>
        <mouseoversound>UIMenuFocus</mouseoversound>
        <clicksound>UIMenuPrevNext</clicksound>
        <depth> 5 </depth>
        <alpha> <copy src="grandparent()" trait="_alpha"/> </alpha>
        <user0> -1 </user0>		<!-- Set to the current index of the character, or -1 for 'All' -->
    </text>

    <image name="Save_RightFilterArrow">
        <id> &generic; </id>
        <filename> Interface\Main\main_arrow_right.dds </filename>
        <x><copy src="sibling(Save_CharacterName)" trait="x"/><add src="sibling(Save_CharacterName)" trait="width"/><add> 12 </add></x>
        <y> 402.5 </y>
        <width> 17.5 </width>
        <height> 35 </height>
        <zoom> &scale; </zoom>
        <target> &true; </target>
        <clicksound>UIMenuPrevNext</clicksound>
        <visible> &true; </visible>        <!-- Set in code -->
        <depth> 5 </depth>
        <alpha> <copy src="grandparent()" trait="_alpha"/> </alpha>
    </image>
</rect>